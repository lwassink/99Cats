<h2>
  <%=  @cat.name%>'s Info
</h2>
<table>
  <tr>
    <td>Color: </td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex: </td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Birth date: </td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <% unless @cat.description.nil? %>
  <tr>
    <td>Description: </td>
    <td><%= @cat.description %></td>
  </tr>
  <% end %>
</table><br>

<%= link_to("Edit cat information", edit_cat_url(@cat.id)) %><br>

<label><br>
  Pending requests:
  <ol>
    <% @cat.requests.order(:start_date).each do |request| %>
    <li>
      Start date: <%= request.start_date %>,
      End date: <%= request.end_date %>,
      Status: <%= request.status %>

      <% if request.status == "PENDING" %>
        <%= button_to( "Approve", approve_cat_path(request)) %>
        <%= button_to( "Deny", deny_cat_path(request)) %>
      <% end %>

    </li>
    <% end %>
  </ol>
</label>
